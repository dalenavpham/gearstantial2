<h1>Listing laptops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Screen size</th>
      <th>Ram</th>
      <th>Hdd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laptops.each do |laptop| %>
      <tr>
        <td><%= laptop.name %></td>
        <td><%= laptop.screen_size %></td>
        <td><%= laptop.ram %></td>
        <td><%= laptop.hdd %></td>
        <td><%= link_to 'Show', laptop %></td>
        <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
        <td><%= link_to 'Destroy', laptop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Laptop', new_laptop_path %>
